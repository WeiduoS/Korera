    <http pattern="/css/**" security="none"></http>
    <http pattern="/img/**" security="none"></http>


    <!--auto load the Security config-->
    <!--default use Spring EL expression-->
    <http auto-config="true" use-expressions="true">
        <!--<intercept-url pattern="/login.jsp" access="permitAll()"/>-->
        <intercept-url pattern="/**" access="hasAnyRole('ROLE_USER')"/>
        <csrf disabled="true"/>
        <!--<form-login login-page="/login.jsp"-->
                    <!--login-processing-url="/login"-->
                    <!--default-target-url="/index.jsp"-->
                    <!--authentication-failure-forward-url="/failer.jsp"/>-->

        <!--<logout logout-url="/logout"-->
                <!--logout-success-url="/login.jsp"/>-->
        <remember-me token-validity-seconds="60"
                     data-source-ref="dataSource2"
                     remember-me-parameter="remember-me"/>
        <custom-filter before="FORM_LOGIN_FILTER" ref="jwtLoginFilter"></custom-filter>
        <custom-filter after="BASIC_AUTH_FILTER" ref="jwtVerifyFilter"></custom-filter>
    </http>

    <b:bean id="rsaManager" class="com.itlize.Korera.commons.RsaManager">
